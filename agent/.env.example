# ============================================
# 日本陆上养殖数据处理系统 - 环境配置示例
# ============================================
# 复制此文件为 .env 并填入实际配置值

# 数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=469720gm
MYSQL_DATABASE=cognitive

# OpenAI API 配置
# 注意：OPENAI_API_KEY 是必需的，如果启用 AI 分析功能
OPENAI_API_KEY=
OPENAI_MODEL=anthropic/claude-sonnet-4.5
OPENAI_SEARCH_MODEL=openai/gpt-4o-search-preview  # 搜索模型（用于需要联网的场景）
# OPENAI_SEARCH_MODEL=anthropic/claude-sonnet-4.5
OPENAI_BASE_MODEL=anthropic/claude-sonnet-4.5  # 基础模型（用于分类/判断任务，不联网）
OPENAI_TEMPERATURE=0.5
OPENAI_BASE_URL = https://openrouter.ai/api/v1
ENABLE_LLM_SEARCH=True                   # 启用联网搜索

#外部专家服务配置
EXPERT_API_BASE_URL=http://localhost:5003
EXPERT_API_KEY=your_api_key_here          # 可选：API密钥
EXPERT_API_TIMEOUT=90                      # 超时时间（秒）
ENABLE_EXPERT_CONSULTATION=true            # 是否启用专家咨询

#外部设备专家配置
DEVICE_EXPERT_API_BASE_URL = "http://localhost:5004"
DEVICE_EXPERT_API_TIMEOUT = 300  # 设备专家API超时时间（秒）
ENABLE_DEVICE_EXPERT = true  # 是否启用设备控制专家

#天气查询配置
OPENWEATHER_API_KEY=
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5/weather
WEATHER_DEFAULT_LOCATION=Tsukuba
WEATHER_LANG=zh_cn
ENABLE_WEATHER_SERVICE=true

# 喂食机服务配置
AIJ_FEEDER_USER=
AIJ_FEEDER_PASS=
AIJ_FEEDER_DEV_NAME=
AIJ_FEEDER_BASE_URL=
AIJ_FEEDER_TIMEOUT=15

# 服务配置
HOST=0.0.0.0
PORT=8000
WS_PORT=8001
DEBUG=false

# 日志配置
# LOG_LEVEL 可选值: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# LOG_FILE 留空则输出到控制台，设置路径则写入文件
LOG_FILE=

# 工作流配置
MAX_RETRY_COUNT=3
ENABLE_AI_ANALYSIS=true
